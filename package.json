{
  "name": "snappy",
  "version": "1.0.0",
  "description": "Universal Web Auto-Responder - Desktop automation assistant for web-based messaging platforms",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "dev:debug": "tsc && electron . --enable-logging",
    "build": "tsc",
    "package": "electron-builder",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/(?!.*property)",
    "test:property": "jest --testPathPattern=property",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "electron",
    "automation",
    "messaging",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fast-check": "^3.15.0"
  }
}
