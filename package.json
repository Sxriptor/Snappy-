{
  "name": "snappy",
  "version": "1.5.8",
  "description": "Universal Web Auto-Responder - Desktop automation assistant for web-based messaging platforms",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "tsc && npm run copy-assets && electron .",
    "dev:debug": "tsc && npm run copy-assets && electron . --enable-logging",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "package": "electron-builder",
    "convert-icon": "node scripts/convert-icon.js",
    "dist:win": "npm run build && npm run convert-icon && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac dmg && node scripts/rename-mac-update-files.js",
    "dist:mac:arm64": "npm run build && electron-builder --mac dmg --arm64 && node scripts/rename-mac-update-files.js",
    "dist:mac:x64": "npm run build && electron-builder --mac dmg --x64 && node scripts/rename-mac-update-files.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/(?!.*property)",
    "test:property": "jest --testPathPattern=property",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "electron",
    "automation",
    "messaging",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "discord.js": "^14.18.0",
    "electron-updater": "^6.6.2",
    "fast-check": "^3.15.0"
  },
  "build": {
    "appId": "com.snappy.app",
    "productName": "Snappy",
    "artifactName": "${productName}-Setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "build/icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "Sxriptor",
      "repo": "Snappy-"
    }
  }
}
